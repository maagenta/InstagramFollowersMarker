{

  "manifest_version": 2,
  "name": "Instagram Followers Marker",
  "author": "Sebastián Castro Gálvez",
  "version": "1.0",

  "description": "Tiny tool for marking followed accounts",

  "icons": {
    "64": "icons/IFG-64.png"
  },

  "permissions": [
        "dns",
    "menus",
    "privacy",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
     "*://*instagram.com/*"
  ],


  "browser_action": {
    "default_icon": "icons/IFG-64.png",
    "default_popup": "popup/main_menu.html"
  },

  "background": {
  "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["borderify.js"],
      "run_at": "document_start"
    }
  ]

}
